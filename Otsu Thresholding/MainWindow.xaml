<Window x:Class="Otsu_Thresholding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Otsu Thresholding" Height="561.246" Width="822.319">
    <Grid>
        <StackPanel>
            <StackPanel x:Name="StackPanelOriginal" Orientation="Horizontal" VerticalAlignment="Top">
                <Border BorderBrush="Black" BorderThickness="1" Margin="3">
                    <Image x:Name="ImageOriginal" Width="400" Height="400"></Image>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" Margin="3">
                    <Image x:Name="ImageEdited" Width="400" Height="400"></Image>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Browse Image" Height="35" Width="150" x:Name="ButtonOpen" Click="ButtonOpen_Click"></Button>
                <Button Content="Apply Otsu Thresholding" Height="35" Width="150" x:Name="ButtonThreshold" Click="ButtonThreshold_Click"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0,0,0" Width="804">
                <Label x:Name="label" Width="150" Content="Ngưỡng tự động" />
                <Label x:Name="valueAdaptiveThreshold" Width="150" Content="" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
